@model Online_Store.Models.ProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<section class="bg-light py-5" style="min-height: calc(100vh - 200px);">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="card shadow-sm p-4">
                    <h2 class="text-center mb-4 fw-bold">👤 Your Profile</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="mb-4">
                        <p><strong>Username:</strong> @Model.UserName</p>
                        <p><strong>Address:</strong> @Model.Address</p>
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Url.Action("EditProfile", "Profile")" class="btn btn-primary">
                            ✏️ Edit Profile
                        </a>
                        <a href="@Url.Action("ChangeProfilePassword", "Profile")" class="btn btn-secondary">
                            🔒 Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <a asp-controller="Main" asp-action="Index" class="btn btn-outline-dark mt-3">🏠 Back to Home</a>
        </div>
    </div>
</section>
