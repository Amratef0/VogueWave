@model Online_Store.Models.ProfileViewModel

<h2>Edit Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="SaveEditProfile" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("ViewProfile", "Profile")" class="btn btn-secondary mt-3">Back to Profile</a>
