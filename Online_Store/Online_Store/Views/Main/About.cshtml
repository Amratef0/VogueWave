@{
    ViewData["Title"] = "About Vogue Wave";
}


<section class="bg-light text-dark py-5" style="min-height: calc(100vh - 200px);">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">🛍️ About Our Store</h1>
            <p class="lead">Discover who we are and what we stand for</p>
        </div>

        <div class="row justify-content-center mb-5">
            <div class="col-lg-10">
                <div class="card p-4 shadow-sm">
                    <div class="row align-items-center">
                        <div class="col-md-6 mb-4 mb-md-0">
                            <img src="/images/post-large-image4.jpg" class="img-fluid rounded shadow-sm" alt="Store Image">
                        </div>
                        <div class="col-md-6">
                            <h4 class="mb-3">🎯 Our Mission</h4>
                            <p>
                                Our mission is to provide high-quality products at competitive prices,
                                delivered with unmatched customer service.
                            </p>
                            <h4 class="mt-4 mb-3">🌟 Why Choose Us?</h4>
                            <ul>
                                <li>Wide range of products</li>
                                <li>Fast and secure delivery</li>
                                <li>Excellent customer support</li>
                                <li>Trusted by thousands of happy customers</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row text-center mb-5">
            <div class="col-md-4 mb-4">
                <div class="card p-3 shadow-sm h-100">
                    <i class="bi bi-box-seam fs-1 text-primary"></i>
                    <h5 class="mt-3">Quality Products</h5>
                    <p>We source our items from trusted manufacturers around the globe.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-3 shadow-sm h-100">
                    <i class="bi bi-truck fs-1 text-success"></i>
                    <h5 class="mt-3">Fast Shipping</h5>
                    <p>Receive your orders quickly and securely, anywhere in Egypt.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-3 shadow-sm h-100">
                    <i class="bi bi-shield-check fs-1 text-warning"></i>
                    <h5 class="mt-3">Secure Shopping</h5>
                    <p>Your privacy and data are protected every step of the way.</p>
                </div>
            </div>
        </div>

        <div class="text-center">
            <a href="/" class="btn btn-dark btn-lg">🏠 Back to Home</a>
        </div>
    </div>
</section>
