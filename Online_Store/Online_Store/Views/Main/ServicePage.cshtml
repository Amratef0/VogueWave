@{
    ViewData["Title"] = "Our Services";
}

<section class="bg-light text-dark py-5" style="min-height: calc(100vh - 200px);">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">💼 Our Services</h1>
            <p class="lead">Explore what we offer to elevate your shopping experience</p>
        </div>

        <div class="row justify-content-center mb-5">
            <div class="col-lg-10">
                <div class="card p-4 shadow-sm">
                    <div class="row align-items-center">
                        <div class="col-md-6 mb-4 mb-md-0">
                            <img src="/images\video-image-2.jpg" class="img-fluid rounded shadow-sm" alt="Our Services">
                        </div>
                        <div class="col-md-6">
                            <h4 class="mb-3">🧵 Fashion That Fits Your Style</h4>
                            <p>
                                At Vogue Wave, we provide a curated collection of clothing, accessories, and fashion essentials designed to suit every style and occasion.
                            </p>
                            <h4 class="mt-4 mb-3">🔧 What We Offer:</h4>
                            <ul>
                                <li>Men's and Women's Apparel</li>
                                <li>Trendy Accessories and Jewelry</li>
                                <li>Seasonal Collections & Limited Editions</li>
                                <li>Easy Online Ordering & Fast Checkout</li>
                                <li>Exclusive Discounts and Promotions</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row text-center mb-5">
            <div class="col-md-4 mb-4">
                <div class="card p-3 shadow-sm h-100">
                    <i class="bi bi-bag-check fs-1 text-primary"></i>
                    <h5 class="mt-3">High-Quality Products</h5>
                    <p>We partner with trusted suppliers to bring you premium materials and lasting quality.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-3 shadow-sm h-100">
                    <i class="bi bi-lightning-charge fs-1 text-success"></i>
                    <h5 class="mt-3">Fast Delivery</h5>
                    <p>We deliver across Egypt with reliable shipping so your orders arrive on time.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card p-3 shadow-sm h-100">
                    <i class="bi bi-gift fs-1 text-danger"></i>
                    <h5 class="mt-3">Special Offers</h5>
                    <p>Enjoy seasonal sales, flash deals, and member-only discounts throughout the year.</p>
                </div>
            </div>
        </div>

        <div class="text-center">
            <a asp-controller="Main" asp-action="Index" class="btn btn-dark btn-lg">🛒 Start Shopping</a>
        </div>
    </div>
</section>
