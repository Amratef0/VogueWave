@model Online_Store.Models.Product

<h1 class="text-center my-4">Add New Product</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
}

<section class="py-4 px-3 mx-auto" style="max-width: 700px; background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <form method="post" asp-action="SaveAdd">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Product Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Product Name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter Price" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Enter Description" />
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Main Image Filename</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="e.g. product_main.jpg" />
            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Gallery Image Filenames (comma separated)</label>
            <input name="galleryImagesNames" class="form-control" placeholder="e.g. img1.jpg,img2.jpg" />
        </div>

        <div class="mb-4">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger small"></span>
        </div>

        <div class="text-center mb-3">
            <button type="submit" class="btn btn-success w-100">Create Product</button>
        </div>
    </form>
</section>

<div class="text-center my-4">
    <a href="/Main/Index" class="btn btn-secondary">Back to List</a>
</div>
