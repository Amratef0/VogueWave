<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col d-flex justify-content-center">
                <div class="card shadow-sm border-light" style="width: 18rem;">
                    <img src="~/images/@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 180px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title text-truncate" title="@item.Name">@item.Name</h5>
                        <p class="card-text text-truncate" title="@item.Description">@item.Description</p>
                        <p class="card-text fw-bold">Price: @item.Price.ToString("F2") EGP</p>
                        <a href="/Main/Edit/@item.Id" class="btn btn-outline-warning btn-sm w-100">Edit</a>
                        <form method="post" action="/Main/Delete/@item.Id" onsubmit="return confirm('Are you sure you want to delete this product?');" class="w-100 mt-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
