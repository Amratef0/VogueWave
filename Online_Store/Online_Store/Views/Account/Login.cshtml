@model Online_Store.Models.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-light rounded">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Login</h2>
                    <form asp-action="SaveLogin">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- حقل اسم المستخدم أو البريد الإلكتروني -->
                        <div class="form-group mb-3">
                            <label asp-for="UserNameOrEmail" class="form-label">Username or Email</label>
                            <input asp-for="UserNameOrEmail" class="form-control" placeholder="Enter your username or email" />
                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-4 d-flex align-items-center">
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="RememberMe" />
                            <label class="form-check-label" for="RememberMe" style="margin-left: 8px;">Remember Me</label>
                        </div>



                        <div class="d-grid">
                            <input type="submit" value="Login" class="btn btn-primary btn-lg" />
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Register" class="text-decoration-none">Create an Account</a>
                    </div>

                    <div class="text-center mt-2">
                        <a  asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
